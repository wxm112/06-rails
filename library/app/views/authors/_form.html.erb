<%= form_for @author do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name, :autofocus => true %>

    <%= f.label :nationality %>
    <%= f.text_field :nationality %>

    <%= f.label :dob, "Date of birth" %>
    <%= f.date_field :dob %>

    <%= f.label :image %>
    <%= f.url_field :image %>

    <%= f.submit %>

<% end %>