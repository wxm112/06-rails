<h1><%= @author.name %></h1>

<p>
<%= link_to 'Delete Author', author_path(@author), :method => 'delete',
            :data => {:confirm => "Are you sure?"} %>
<%= link_to 'Update author', edit_author_path(@author) %>
</p>

<%= image_tag @author.image, :class => 'portrait' %>
<ul>
    <li>Nationality: <%= @author.nationality%></li>
    <li>Date of birth: <%= @author.dob.strftime('%B %e, %Y') %></li>
</ul>

<% if @author.books.any? %>
 <h2>Books</h2>
<% end %>

<% @author.books.each do |book| %>
<ul>
    <li><%= link_to(book.title, book) %></li>
</ul>
<% end %>