<%= form_for @book do |f| %>

    <%= f.label :title %>
    <%= f.text_field :title, :autofocus => true %>

    <%= f.label :language %>
    <%= f.text_field :language %>

    <%= f.label :dop, "Publisation date" %>
    <%= f.text_field :dop %>

    <%= f.label :genre %>
    <%= f.text_field :genre %>

    <%= f.label :image %>
    <%= f.url_field :image %>
    <br>
    <%= f.label :author_id, "Author" %>
    <%= f.select :author_id, Author.all.map {|author| [author.name, author.id]}, :include_blank => true  %>

    <%= f.submit %>

<% end %>