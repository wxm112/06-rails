<h1><%= @artist.name %></h1>

<p>
<%= link_to 'Delete artist', artist_path(@artist), :method => 'delete',
            :data => {:confirm => "Are you sure?"} %>
<%= link_to 'Update artist', edit_artist_path(@artist) %>
</p>

<%= image_tag @artist.image, :class => 'portrait' %>
<ul>
    <li>Nationality: <%= @artist.nationality%></li>
    <li>Date of birth: <%= @artist.dob.strftime('%B %e, %Y') %></li>
    <li>Period: <%= @artist.period %></li>
</ul>

<% if @artist.works.any? %>
 <h2>Works</h2>
<% end %>

<% @artist.works.each do |work| %>
    <%= link_to(image_tag(work.image, :class => 'thumb'), work) %>
<% end %>